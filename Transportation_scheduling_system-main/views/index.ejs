        .carousel-indicators button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            border: none;
            margin: 0 5px;
            transition: var(--transition);
        }

        .carousel-indicators button.active {
            background: var(--primary-color);
            transform: scale(1.2);
        }

        /* Modern Sections */
        .section-padding {
            padding: 5rem 0;
