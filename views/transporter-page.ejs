    <script>
        // Show loader on page load
        const pageLoader = document.getElementById('page-loader');
        if (pageLoader) {
            pageLoader.style.display = 'block';
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            // Hide loader when DOM is loaded
            if (pageLoader) {
                pageLoader.style.display = 'none';
            }
            
            // Section management
            const sections = {
                dashboard: document.getElementById('dashboard-section'),
                manageShipments: document.getElementById('manage-shipments-section'),
                manageProfile: document.getElementById('manage-profile-section'),
                contact: document.getElementById('contact-section'),
                help: document.getElementById('help-section'),
            };

            const navLinks = {
                dashboard: document.getElementById('dashboard-link'),
                manageShipments: document.getElementById('manage-shipments-link'),
                manageProfile: document.getElementById('manage-profile-link'),
                contact: document.getElementById('contact-link'),
                help: document.getElementById('help-link'),
            };
            
            const footerLinks = {
                dashboard: document.getElementById('footer-home'),
                manageShipments: document.getElementById('footer-shipments'),
                manageProfile: document.getElementById('footer-profile'),
                help: document.getElementById('footer-help'),
            };

            // Function to show the selected section with animation
            function showSection(sectionName) {
                // Show loader when changing sections
                if (pageLoader) {
                    pageLoader.style.display = 'block';
                }
                
                // Update active navigation link
                Object.values(navLinks).forEach(link => {
                    if (link) link.classList.remove('active');
                });
                
                if (navLinks[sectionName]) {
                    navLinks[sectionName].classList.add('active');
                }
                
                // Hide all sections first with a small delay
                setTimeout(() => {
                    Object.values(sections).forEach(section => {
                        if (section) {
                            section.classList.remove('active');
                            section.style.display = 'none';
                        }
                    });
                    
                    // Show the selected section
                    if (sections[sectionName]) {
                        sections[sectionName].style.display = 'block';
                        setTimeout(() => {
                            sections[sectionName].classList.add('active');
                            
                            // Hide loader after section is shown
                            if (pageLoader) {
                                pageLoader.style.display = 'none';
                            }
                        }, 50);
                    }
                }, 200);
            }

            // Add event listeners to navigation links
            Object.entries(navLinks).forEach(([section, link]) => {
                if (link) {
                    link.addEventListener('click', (e) => {
                        e.preventDefault();
                        showSection(section);
                    });
                }
            });
            
            // Add event listeners to footer links
            Object.entries(footerLinks).forEach(([section, link]) => {
                if (link) {
                    link.addEventListener('click', (e) => {
                        e.preventDefault();
                        showSection(section);
                    });
                }
            });

            // Default to 'dashboard' on page load
            showSection('dashboard');
            
            // Initialize the typing effect
            const typedTextElement = document.getElementById('typed-text');
            if (typedTextElement) {
                typedTextElement.style.width = 'auto'; // Ensure correct width for animation
            }
            
            // Initialize the current year
            const currentYearElement = document.getElementById('current-year');
            if (currentYearElement) {
                currentYearElement.textContent = new Date().getFullYear();
            }
            
            // Add animation classes to elements that should be animated on scroll
            const animatedElements = document.querySelectorAll('.card, h2, .list-group');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate__animated', 'animate__fadeIn');
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1
            });
            
            animatedElements.forEach(element => {
                observer.observe(element);
            });
        });

        // Shipment filtering function
        function filterShipments() {
            const searchKeyword = document.getElementById('search-bar').value.toLowerCase();
            const filterStatus = document.getElementById('filter-status').value;
            let visibleCount = 0;

            document.querySelectorAll('#shipment-list li').forEach(item => {
                const matchesSearch = item.innerText.toLowerCase().includes(searchKeyword);
                const matchesStatus = !filterStatus || item.getAttribute('data-status') === filterStatus;
                const shouldShow = matchesSearch && matchesStatus;

                if (shouldShow) {
                    item.style.display = '';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Update the visible count
            const visibleCountElement = document.getElementById('visible-count');
            if (visibleCountElement) {
                visibleCountElement.textContent = visibleCount;
            }
        }

        // Continue button functionality
        document.querySelectorAll('.continue-btn').forEach(button => {
            button.addEventListener('click', function() {
                const shipmentId = this.getAttribute('data-id');
                
                // Show loader
                if (pageLoader) {
                    pageLoader.style.display = 'block';
                }
                
                // Add slight delay for better user experience
                setTimeout(() => {
                    const confirmRide = confirm("Do you want to continue with this shipment?");
                    
                    if (confirmRide) {
                        alert("Proceeding with shipment ID: " + shipmentId);
                        window.location.href = `/notification/${shipmentId}`;
                    } else {
                        alert("Shipment action cancelled.");
                        if (pageLoader) {
                            pageLoader.style.display = 'none';
                        }
                    }
                }, 300);
            });
        });

        // View photo button functionality
        document.querySelectorAll('.view-photo-btn').forEach(button => {
            button.addEventListener('click', function() {
                alert("Photo viewer functionality will be implemented soon!");
            });
        });
        
        // Contact form submission
        const contactForm = document.getElementById('contactForm');
        if (contactForm) {
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (pageLoader) {
                    pageLoader.style.display = 'block';
                }
                
                setTimeout(() => {
                    alert("Your message has been sent! Our team will get back to you soon.");
                    contactForm.reset();
                    
                    if (pageLoader) {
                        pageLoader.style.display = 'none';
                    }
                }, 800);
            });
        }
        
        // Apply animations to form inputs
        document.querySelectorAll('input, textarea, select').forEach(element => {
            element.addEventListener('focus', function() {
                this.classList.add('animate__animated', 'animate__pulse');
            });
            
            element.addEventListener('blur', function() {
                this.classList.remove('animate__animated', 'animate__pulse');
            });
        });
        
        // Add hover effects to buttons
        document.querySelectorAll('.btn').forEach(button => {
            button.classList.add('btn-hover');
        });

        // Apply animation delays to shipment list items
        document.querySelectorAll('#shipment-list li').forEach(item => {
            const index = item.getAttribute('data-index');
            if (index) {
                item.style.animationDelay = (0.1 * parseInt(index)) + 's';
            }
        });
